<%- include('../partials/header') %>

<img src="https://i.imgur.com/cyd7mJp.jpg" alt="hot air balloons" id="allPlans">

<h1>Create New Activity</h1>
<hr>

<form action="/trips/<%= trip._id %>/destinations" method="POST" id="createPlanForm">
  <label>Photos:</label>
    <input type="text" name="imgUrl">
  <label>Name:</label>
    <input type="text" name="name">
  <label>Location:</label>
    <input type="text" name="location">
  <label>Opening Hours:</label>
    <input type="text" name="openingHrs">
  <label>Phone Number:</label>
    <input type="number" name="phoneNum">
  <label>Website:</label>
    <input type="text" name="website">
  <label>Budget:</label>
    <input type="number" name="budget">
  <label>Expenses:</label>
    <input type="number" name="expenses">
  <input type="submit" value="Add Activity" class="btn">
</form>

