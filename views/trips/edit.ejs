<%- include('../partials/header') %>

<img src="https://i.imgur.com/C74C5ZO.jpg" id="allPlans">

<h1>Edit My Planner</h1>
<hr>

<form action="/trips/<%= trip._id %>?_method=PUT" method="POST" id="createPlanForm">
  <label>Planner Name:</label>
    <input type="text" name="title" value="<%= trip.title %>">
  <label>Location:</label>
    <input type="text" name="location" value="<%= trip.location %>">
  <label>Start Date:</label>
    <input type="date" name="startDate" value="<%= trip.startDate %>">
  <label>End Date:</label>
    <input type="date" name="endDate" value="<%= trip.endDate %>">
  <label>Budget:</label>
    <input type="number" name="budget" value="<%= trip.budget %>">
  <label>Expenses:</label>
    <input type="number" name="expenses" value="<%= trip.expenses %>">
  <label>Public Status:</label>
    <select name="privacy" value="<%= trip.privacy %>">
      <option value="false">Private</option>
      <option value="true">Public</option>
    </select>
  <input type="submit" value="Update Planner" class="btn">
</form>

<%- include('../partials/footer') %>